# Avenue M. E-commerce Platform
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Klarna Configuration
KLARNA_API_KEY=your-klarna-api-key
KLARNA_API_SECRET=your-klarna-api-secret

# Courier API Configuration (BRT, DHL, GLS)
COURIER_PROVIDER=BRT
COURIER_API_KEY=your-courier-api-key
COURIER_API_SECRET=your-courier-api-secret

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM_ADDRESS=noreply@avenuegallarate.it

# Google Wallet Configuration
# Ottieni questi valori da: https://pay.google.com/business/console
GOOGLE_WALLET_ISSUER_ID=your-issuer-id
GOOGLE_WALLET_SERVICE_ACCOUNT_EMAIL=wallet@your-project.iam.gserviceaccount.com
GOOGLE_WALLET_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Apple Wallet Configuration (opzionale)
APPLE_PASS_TYPE_ID=pass.com.mimmofratelli.giftcard
APPLE_TEAM_ID=YOUR_TEAM_ID
